<?xml version="1.0"?>
<launch>

  <rosparam file="$(find motion_planning)/launch/config/planner.yaml" command="load" ns="robot_info/" />

 	<arg name = "runRosbag" default= "false" />
    
    <include file="$(find motion_planning)/launch/turtlebot_world.launch"></include>
    
    <!-- <node pkg="motion_planning" name="planner" type="planner" output="screen" /> -->
    
    <node pkg="rosbag" name="record" type="record" args="-a -x /camera/(.*) -O $(find motion_planning)/bags/walker.bag" if="$(arg runRosbag)" />
    <node type="rviz" name="rviz" pkg="rviz" args="-d $(find motion_planning)/launch/rviz_config.rviz" />
</launch>


