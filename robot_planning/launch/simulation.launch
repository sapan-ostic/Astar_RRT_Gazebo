<?xml version="1.0"?>
<launch>
	<arg name = "runRosbag" default= "false" />
	<arg name = "world" default= "cluttered" />
    
    <!-- World launch file -->
    <include file="$(find robot_planning)/launch/turtlebot_world.launch" if="$(eval world=='cluttered')"></include>

    <include file="$(find robot_planning)/launch/empty_world.launch" if="$(eval world=='empty')"></include>

    <include file="$(find robot_planning)/launch/basic_world.launch" if="$(eval world=='basic')"></include>

    <include file="$(find robot_planning)/launch/costmap.launch"></include>
        
    <node pkg="rosbag" name="record" type="record" args="-a -x /camera/(.*) -O $(find robot_planning)/bags/walker.bag" if="$(arg runRosbag)" />
    
    <node type="rviz" name="rviz" pkg="rviz" args="-d $(find robot_planning)/launch/rviz_config.rviz" />
</launch>


